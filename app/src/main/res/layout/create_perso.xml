<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:text="Création de personnage"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:padding="15dp"
        android:text="Saississez un nom :" />

    <EditText
        android:id="@+id/NomPerso"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Race : " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_below="@+id/NomPerso"
        android:layout_toEndOf="@+id/textView3"
        android:paddingTop="10dp"
        android:text="Classe : "
        android:layout_toRightOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Sexe : " />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:paddingTop="10dp"
        android:text="Genre : "
        android:layout_toEndOf="@+id/spinnerSexe"
        android:layout_toRightOf="@id/spinnerSexe"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <Spinner
        android:id="@+id/spinnerClasse"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/NomPerso"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <Spinner
        android:id="@+id/spinnerRace"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/NomPerso"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Spinner
        android:id="@+id/spinnerSexe"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView4"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Spinner
        android:id="@+id/spinnerGenre"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/Attr1"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="Force : " />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Minus1Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsgauche" />

        <TextView
            android:id="@+id/Attr1Value"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="15"
            android:layout_weight="1.10" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Add1value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsdroit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/Attr2"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="Dextérité : " />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Minus2Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsgauche" />

        <TextView
            android:id="@+id/Attr2Value"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1.01"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="15" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Add2Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsdroit" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">

        <TextView
            android:id="@+id/Attr3"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="Endurance : " />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Minus3Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsgauche" />

        <TextView
            android:id="@+id/Attr3Value"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1.01"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="15" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Add3Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsdroit" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">

        <TextView
            android:id="@+id/Attr4"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="Intelligence : " />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Minus4Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsgauche" />

        <TextView
            android:id="@+id/Attr4Value"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1.01"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="15" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Add4Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsdroit" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout6">

        <TextView
            android:id="@+id/Attr5"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="Attribut 1 : " />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Minus5Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsgauche" />

        <TextView
            android:id="@+id/Attr5Value"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1.01"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="15" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Add5Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsdroit" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout7">

        <TextView
            android:id="@+id/Attr6"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="Attribut 2 : " />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Minus6Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsgauche" />

        <TextView
            android:id="@+id/Attr6Value"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1.01"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="15" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Add6Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsdroit" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout8">

        <TextView
            android:id="@+id/Attr7"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="Attribut 3 : " />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Minus7Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsgauche" />

        <TextView
            android:id="@+id/Attr7Value"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/spinnerRace"
            android:layout_alignRight="@+id/spinnerRace"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="15" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Add7Value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/chevronsdroit" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cancelactivity"
        android:text="Annuler"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonValid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Valider"
        android:onClick="openGameActivity"
        android:layout_alignTop="@+id/buttonCancel" />

</RelativeLayout>