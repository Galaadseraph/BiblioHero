<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:text="CrÃ©ation de personnage"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:padding="15dp"
        android:text="Saississez un nom :" />

    <EditText
        android:id="@+id/NomPerso"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:paddingTop="10dp"
        android:text="Race : " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/NomPerso"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:paddingTop="10dp"
        android:text="Classe : " />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:paddingTop="10dp"
        android:text="Sexe : " />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingTop="10dp"
        android:text="Genre : "
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/spinner4"
        android:layout_toEndOf="@+id/spinner4" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/NomPerso" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/NomPerso"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toStartOf="@+id/NomPerso" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>